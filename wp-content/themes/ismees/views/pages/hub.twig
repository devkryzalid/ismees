            }
        %}
        
        <div class="subjects-ctn">
            {% for subject in subjects %}
                {% include "partials/cards/line-card.twig" with {
                    'item': subject,
                    'introduction': true
                    }
                %}
            {% endfor %}
        </div>
        
        {% if post.content %}
            <div class="page-content">
                <div class="container-md">
                    <div class="hub-footer gutenberg">
                        {{ post.content }}
                    </div>
                </div>
            </div>
        {% endif %}
    </main>
{% endblock %}
{% block specific_script %}
	<script src="{{ theme.link }}/dist/scripts/pages/hub.js"></script>
{% endblock %}