<ul class="menu-items" id="primary-menu">
    {% for item in menu_primary.items %}
        <li class="{{ item.classes | join(' ') }} main-item">
            <a href="{{ item.url }}"{% if item.children %}class="has-child-link"{% endif %}>{% if item.children %}<i class="icon-simple-arrow-right"></i>{% endif %}{{ item.title }}</a>
            {% if item.children %}
                <ul class="child-menu">
                    {% for subItem in item.children %}
                        <li class="{{ subItem.classes | join(' ') }} subItem {{ subItem.children ? 'has-sub-child' : '' }}">
                            <a target="{{ subItem.target }}" {% if subItem.children %}class="has-sub-child-title" tabindex="-1"{% endif %} href="{{ subItem.link }}">{{ subItem.title }}</a>
                            {% if subItem.children %}
                                <ul class="subChild-menu">
                                    {% for lastItem in subItem.children %}
                                        <li class="{{ lastItem.classes | join(' ') }} lastItem">
                                            <a target="{{ lastItem.target }}" href="{{ lastItem.link }}">{{ lastItem.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>