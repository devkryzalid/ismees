{% if taxonomy %}
    {% set iconCategory = get_primary_taxonomy(item.id, taxonomy, true).icon %}
{% endif %}
{% if item.terms('resource_type') %}
    {% set primaryType = get_primary_taxonomy(item.id, 'resource_type', true).name %}
{% endif %}

<div class="card-ctn jsBlockLink" data-aos="fade-up" data-aos-delay="500">
    <div class="card-image-ctn">   
        {% if item.thumbnail %}
            <img class="card-image" src="{{ item.thumbnail.src }}" alt="{{ __('Photo de ', 'ismées') ~ item.title }}" />
        {% else %}
            <img class="card-image" src="{{ theme.link }}/assets/images/default-image.png" alt="{{ __('Photo de ', 'ismées') ~ item.title }}" />
        {% endif %}
        {% if iconCategory %}
            <div class="card-icon-ctn">
                <img class="card-icon" src="{{ site.home_url ~ '/wp-content/plugins/acf-icon-picker/assets/img/acf/' ~ iconCategory ~ '.svg' }}" alt="" />
            </div>
        {% endif %}
        {% if primaryType %}
            <div class="card-type">
                <p>{{primaryType}}</p>
            </div>
        {% endif %}
    </div>
    {% if taxonomy %}
        {% if item.terms(taxonomy) %}
            <div class="card-taxonomies-ctn">
                {% for taxonomy in item.terms(taxonomy) %}
                    <p class="card-taxonomy">{{ taxonomy.name }}</p>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
    <a href="{{ item.link }}" class="card-title">{{ item.title }}</a>
</div>